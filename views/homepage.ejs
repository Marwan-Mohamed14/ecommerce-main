    <link rel="stylesheet" href="/css/home.css">
    <title>Home Page</title>
</head>
<body>
  
<header>
  <div class="topnav">
    <div class="left-section">
      <a class="active"    href="/homepage">   <i class="fa-solid fa-house" style="color:#ffffff;"></i>  Home </i></a>
      <a href="/login"><i class="fa-solid fa-user" style="color: #ffffff;"></i>  Login</a>
      <a href="/feedback"><i class="fa-solid fa-phone" style="color: #ffffff;"></i>  Contact</a>
      <a href="/cartt"><i class="fa-solid fa-cart-shopping" style="color: #ffffff;"></i>  Cart</a>
      <button id="darkModeToggle" class="dark-mode-toggle">
        <img id="icon" src="./public/Pictures/sun_120349 (1).png" alt="Dark Mode Toggle">
    </button>
    </div>
    <span style="color: white;"><i class="fa-solid fa-location-dot" style="color: #c57f50;"></i> Deliver to <strong>Egypt</strong></span>
    
  </div>
</header>

<div class="banner">
    <div class="banner-content">
        <h1>NEW COLLECTION!</h1>
        <p>Checkout our new collection now.</p>
        <a href="/featured-items" class="shop-button" title="Checkout new collection">Shop Now</a>
    </div>
</div>

<hr>

<!-- Inside homepage.ejs -->
<div class="containerr">
  <% products.forEach(product => { %>
      <div class="card">
          <div class="image-container">
              <img src="<%= product.image %>" alt="<%= product.name %>">
          </div>
          <h1><%= product.name %></h1>
          <p class="price">$<%= product.price %></p>
          <p><%= product.description %></p>
          <p>Left in stock: <%= product.stock %></p>
          <p><a href="/preview/<%= product._id %>"><button>Buy Now</button></a></p>
      </div>
  <% }); %>
</div>


<footer>
    <div class="footer-content">
        <div>
            <h4>CoolGadgets Logo</h4>
            <p>Discover the Future<br>With CoolGadgets!</p>
        </div>
